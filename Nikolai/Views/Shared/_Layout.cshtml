<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="/Favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">

    <title>@ViewBag.Title</title>

    @RenderSection("MetaDescription")

    <meta name="author" content="Nikolai Villarin" />
    <meta name="designer" content="Nikolai Villarin" />

    <link rel="apple-touch-icon" sizes="57x57" href="/Favicon/apple-icon-57x57.png">
    <link rel="apple-touch-icon" sizes="60x60" href="/Favicon/apple-icon-60x60.png">
    <link rel="apple-touch-icon" sizes="72x72" href="/Favicon/apple-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="76x76" href="/Favicon/apple-icon-76x76.png">
    <link rel="apple-touch-icon" sizes="114x114" href="/Favicon/apple-icon-114x114.png">
    <link rel="apple-touch-icon" sizes="120x120" href="/Favicon/apple-icon-120x120.png">
    <link rel="apple-touch-icon" sizes="144x144" href="/Favicon/apple-icon-144x144.png">
    <link rel="apple-touch-icon" sizes="152x152" href="/Favicon/apple-icon-152x152.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/Favicon/apple-icon-180x180.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/Favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/Favicon/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/Favicon/favicon-16x16.png">
    <link rel="manifest" href="/manifest.json">

    @Styles.Render("~/Content/Styles")

    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-ETY51D71JJ"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'G-ETY51D71JJ');
    </script>
</head>
<body>
    <header>
        <a id="btnHamburger" href="/Menu" title="Menu" class="button-hamburger button-hamburger--right">
            <span class="button-hamburger__line"></span>
            <span class="button-hamburger__separator"></span>
            <span class="button-hamburger__line"></span>
            <span class="button-hamburger__separator"></span>
            <span class="button-hamburger__line"></span>
        </a>
    </header>
    @Html.Partial("_dial")
    @Html.Partial("_nav")
    <main>
        <div id="mainLoadingOverlay" class="loading-overlay"></div>
        @Html.Partial("~/Views/Menu/_menu.cshtml")
        @Html.Partial("_loading")
        @RenderBody()
    </main>

    @Scripts.Render("~/Content/libraries")

    @Scripts.RenderFormat("<script src=\"{0}\" async></script>", "~/Content/scripts")

    @*-- Weiner Remote Debugging -- *@
    @*<script src="http://176.16.128.15:8080/target/target-script-min.js"></script>*@
</body>
</html>